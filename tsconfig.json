{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["node"]
  },
  "include": [
    "src",
    "tests"
  ],
  "exclude": [
    "src/domain",
    "src/stubs",
    "**/__entity__*"
  ]
}
